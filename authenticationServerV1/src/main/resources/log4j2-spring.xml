<?xml version="1.0" encoding="UTF-8"?>
<!-- <Configuration debug="true" scan="true" status="FATAL"> -->
<Configuration status="FATAL">

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
				<PatternLayout
				pattern="%highlight{%d %X{clientIp} [%X{appName} %X{traceId},%X{spanId},%X{parentId},%X{spanExportable}] [%t] %-5level %X{url} [%c{1.}]: %msg%n%throwable}" />
		</Console>

		<RollingFile name="MyFileinfo"
			fileName="/Users/ashwini/eforms/logs/ldap/info.log"
			filePattern="/Users/ashwini/eforms/logs/ldap/backup/$${date:yyyy-MM}/info-%d{-dd-MMMM-yyyy}-%i.log.gz">

			<Filters>
				<!-- Now deny warn, error and fatal messages -->
				<ThresholdFilter level="WARN" onMatch="DENY"
					onMismatch="NEUTRAL" />

				<!-- This filter accepts info, warn, error, fatal and denies debug/trace -->
				<ThresholdFilter level="INFO" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>

			<PatternLayout>
				<pattern>%d %X{clientIp} [%X{appName} %X{traceId},%X{spanId},%X{parentId},%X{spanExportable}] [%t] %-5level %X{url} [%c{1.}]: %msg%n</pattern>
			</PatternLayout>
			<Policies>
				<!-- rollover on startup, daily and when the file reaches 10 MegaBytes -->
				<!-- <OnStartupTriggeringPolicy /> -->
				<!-- <SizeBasedTriggeringPolicy size="10 MB" /> -->
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>

		<RollingFile name="MyFilewarn"
			fileName="/Users/ashwini/eforms/logs/ldap/warn.log"
			filePattern="/Users/ashwini/eforms/logs/ldap/$${date:yyyy-MM}/warn-%d{-dd-MMMM-yyyy}-%i.log.gz">
			<ThresholdFilter level="WARN" onMatch="ACCEPT"
				onMismatch="DENY" />
			<Filters>
				<ThresholdFilter level="ERROR" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="WARN" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
			<PatternLayout>
				<pattern>%d %X{clientIp} [%X{appName} %X{traceId},%X{spanId},%X{parentId},%X{spanExportable}] [%t] %-5level %X{url} [%c{1.}]: %msg%n</pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>

		<RollingFile name="MyFileerror"
			fileName="/Users/ashwini/eforms/logs/ldap/error.log"
			filePattern="/Users/ashwini/eforms/logs/ldap/$${date:yyyy-MM}/error-%d{-dd-MMMM-yyyy}-%i.log.gz">
			<Filters>
				<ThresholdFilter level="FATAL" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="ERROR" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
			<PatternLayout>
				<pattern>%d %X{clientIp} [%X{appName} %X{traceId},%X{spanId},%X{parentId},%X{spanExportable}] [%t] %-5level %X{url} [%c{1.}]: %msg%n</pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>

		<RollingFile name="MyFiledebug"
			fileName="/Users/ashwini/eforms/logs/ldap/debug.log"
			filePattern="/Users/ashwini/eforms/logs/ldap/$${date:yyyy-MM}/debug-%d{-dd-MMMM-yyyy}-%i.log.gz">
			<Filters>
				<ThresholdFilter level="INFO" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="DEBUG" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
			<PatternLayout>
				<pattern>%d %X{clientIp} [%X{appName} %X{traceId},%X{spanId},%X{parentId},%X{spanExportable}] [%t] %-5level %X{url} [%c{1.}]: %msg%n</pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>
		<RollingFile name="MyFileFatal"
			fileName="/Users/ashwini/eforms/logs/ldap/fatal.log"
			filePattern="/Users/ashwini/eforms/logs/ldap/$${date:yyyy-MM}/fatal-%d{-dd-MMMM-yyyy}-%i.log.gz">
			<Filters>
				<ThresholdFilter level="FATAL" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
			<PatternLayout>
				<pattern>%d %X{clientIp} [%X{appName} %X{traceId},%X{spanId},%X{parentId},%X{spanExportable}] [%t] %-5level %X{url} [%c{1.}]: %msg%n</pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<logger name="in.nic.ashwini.ldap" level="DEBUG"
			additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="MyFileFatal" level="FATAL" />
			<AppenderRef ref="MyFileerror" level="ERROR" />
			<AppenderRef ref="MyFilewarn" level="WARN" />
			<AppenderRef ref="MyFileinfo" level="INFO" />
			<AppenderRef ref="MyFiledebug" level="DEBUG" />
		</logger>
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="MyFileFatal" level="FATAL" />
			<AppenderRef ref="MyFileerror" level="ERROR" />
			<AppenderRef ref="MyFilewarn" level="WARN" />
			<AppenderRef ref="MyFileinfo" level="INFO" />
			<AppenderRef ref="MyFiledebug" level="DEBUG" />
		</Root>
	</Loggers>
</Configuration>